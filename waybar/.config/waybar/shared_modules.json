{
  "custom/spacer": {
    "format": " || "
  },
  "clock": {
    "format": "{:%a, %d. %b  %H:%M}"
  },
  "hyprland/workspaces": {
    "format": "{icon}:{windows}",
    "format-window-separator": " ",
    "window-rewrite-default": "",
    "window-rewrite": {
      "class<firefox>": "",
      "class<Signal>": "󰭹",
      "class<steam>": "",
      "class<firefox> title<.*github.*>": "",
      "alacritty": ""
    }
  },
  "custom/cpu_usage": {
    "exec": "./scripts/aa_cpu.sh",
    "return-type": "json",
    "format": "{text}"
  },
  "custom/cpu_temp": {
    "exec": "./scripts/aa_avg_temps.sh",
    "return-type": "json",
    "format": "{text}"
  },
  "custom/vpn": {
    "format": "{icon}",
    "return-type": "json",
    "exec": "mullvad status --json listen | jq --unbuffered --compact-output '.text = .state | .class = .state | .alt = .state'",
    "format-icons": {
      "connected": "",
      "disconnected": ""
    }
  }
}
