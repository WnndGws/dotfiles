{
  "custom/spacer": {
    "format": " || "
  },
  "clock": {
    "format": "{:%a, %d. %b  %H:%M}"
  },
  "hyprland/workspaces": {
    "format": "{icon}:{windows}",
    "format-window-separator": " ",
    "window-rewrite-default": "",
    "window-rewrite": {
      "class<firefox>": "",
      "class<Signal>": "󰭹",
      "class<steam>": "",
      "class<firefox> title<.*github.*>": "",
      "alacritty": ""
    },
    "persistent-workspaces": {
      "DP-2": [
        1,
        2,
        3,
        4
      ],
      "HDMI-A-1": [
        7,
        8,
        9,
        10
      ],
      "DP-3": [
        5,
        6
      ],
      "HDMI-A-2": [
        6
      ]
    }
  },
  "custom/cpu_usage": {
    "exec": "./scripts/aa_cpu.sh",
    "return-type": "json",
    "format": "{text}"
  },
  "custom/cpu_temp": {
    "exec": "./scripts/aa_avg_temps.sh",
    "return-type": "json",
    "format": "{text}"
  },
  "custom/vpn": {
    "format": "{icon}",
    "return-type": "json",
    "exec": "mullvad status --json listen | jq --unbuffered --compact-output '.text = .state | .class = .state | .alt = .state'",
    "format-icons": {
      "connected": "",
      "disconnected": ""
    }
  },
  "custom/updates": {
    "format": "{text}",
    "return-type": "json",
    "exec": "./scripts/check_updates.sh"
  },
  "network": {
    "format": "{ifname}",
    "format-wifi": "  {essid} ({signalStrength}%)",
    "format-ethernet": " {ipaddr}",
    "format-disconnected": "",
    "tooltip-format": "{ifname} via {gwaddr} 󰊗",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
    "tooltip-format-ethernet": "{ifname} ",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50
  }
}
