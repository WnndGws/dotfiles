[
    {
        "name": "top-bar-main",
        "output": [
            "DP-2",
            "eDP-1"
        ],
        "layer": "top",
        "position": "top",
        "height": 40,
        "spacing": 5,
        "modules-left": [
            "hyprland/workspaces",
        ],
        "modules-center": [
            "hyprland/window"
        ],
        "modules-right": [
            //"custom/nextevent",
            "custom/spacer",
            "clock",
            "custom/spacer"
        ],
        "custom/spacer": {
            "format": " || "
        },
        "custom/nextevent": {
            "format": "{text}",
            "return-type": "json",
            "exec": "$XDG_CONFIG_HOME/waybar/next_event.sh"
        },
        "clock": {
            "format": "{:%a, %d. %b  %H:%M}"
        },
        "hyprland/workspaces": {
            // Use `hyprctl clients` to get the info needed
            // NOTE: Case sensitive but can use regex
            "persistent-workspaces": {
                "DP-2": [
                    1,
                    2,
                    3,
                    4
                ],
                "HDMI-A-1": [
                    7,
                    8,
                    9,
                    10
                ],
                "DP-3": [
                    5,
                    6
                ],
                "HDMI-A-2": [
                    6,
                ],
            },
            "format": "{icon}:{windows}",
            "format-window-separator": " ",
            "window-rewrite-default": "",
            "window-rewrite": {
                "class<firefox>": "", // Windows whose classes are "firefox"
                "class<Signal>": "󰭹",
                "class<steam>": "",
                "class<firefox> title<.*github.*>": "", // Windows whose class is "firefox" and title contains "github". Note that "class" always comes first.
                "alacritty": "", // Windows that contain "foot" in either class or title. For optimization reasons, it will only match against a title if at least one other window explicitly matches against a title.
            },
        }
    },
    {
        "name": "top-bar-secondary",
        "output": [
            "HDMI-A-1",
            "HDMI-A-2",
            "DP-3"
        ],
        "layer": "top",
        "position": "top",
        "height": 40,
        "spacing": 5,
        "modules-left": [
            "hyprland/workspaces",
        ],
        "modules-center": [
            "hyprland/window"
        ],
        "modules-right": [],
        "custom/spacer": {
            "format": " || "
        },
        "clock": {
            "format": "{:%a, %d. %b  %H:%M}"
        },
        "hyprland/workspaces": {
            // Use `hyprctl clients` to get the info needed
            // NOTE: Case sensitive but can use regex
            "persistent-workspaces": {
                "DP-2": [
                    1,
                    2,
                    3,
                    4
                ],
                "HDMI-A-1": [
                    7,
                    8,
                    9,
                    10
                ],
                "DP-3": [
                    5,
                    6
                ],
                "HDMI-A-2": [
                    6,
                ],
            },
            "format": "{icon}:{windows}",
            "format-window-separator": " ",
            "window-rewrite-default": "",
            "window-rewrite": {
                "class<firefox>": "", // Windows whose classes are "firefox"
                "class<Signal>": "󰭹",
                "class<firefox> title<.*github.*>": "", // Windows whose class is "firefox" and title contains "github". Note that "class" always comes first.
                "alacritty": "", // Windows that contain "foot" in either class or title. For optimization reasons, it will only match against a title if at least one other window explicitly matches against a title.
            },
        }
    },
    {
        "name": "bottom-bar-main",
        "output": [
            "DP-2",
            "eDP-1"
        ],
        "layer": "top",
        "position": "bottom",
        "height": 40,
        "spacing": 5,
        "modules-left": [],
        "modules-center": [
            "cpu",
            "custom/spacer",
            "temperature",
            "custom/spacer",
            "memory",
            "custom/spacer",
            "custom/vpn",
            "network",
            "custom/spacer",
            "custom/netspeed",
            "custom/spacer",
            "battery",
            "battery#2",
            "custom/spacer",
            "backlight",
            "custom/spacer",
            "wireplumber",
            "custom/spacer",
            "custom/updates",
            "custom/spacer",
            "custom/todo",
        ],
        "modules-right": [],
        "custom/spacer": {
            "format": " || "
        },
        "custom/todo": {
            "format": "bluetooth,on-click,weather,next-event,kernel"
        },
        "custom/updates": {
            //"format": "Fix script"
            "format": "{text}",
            "return-type": "json",
            "exec": "$XDG_CONFIG_HOME/waybar/scripts/check_updates.sh"
        },
        "temperature": {
            "thermal-zone": 0, // Use 1st core as exemplar
            "critical-threshold": 60,
            "format": " {temperatureC}°C"
        },
        "wireplumber": {
            "format": "{icon} {volume}%",
            "format-muted": "󰝟 Mute",
            "format-icons": [
                "󰖀",
                "󰕾"
            ],
        },
        "backlight": {
            "device": "intel_backlight",
            "format": "{icon} {percent}%",
            "states": {
                "light": 51,
                "dark": 0
            },
            "format-icons": [
                "",
                "",
            ],
        },
        "battery": {
            "bat": "BAT0",
            "interval": 10,
            "format-time": "{H:02}:{m} left",
            /* battery triggers BELOW, unlike others */
            "states": {
                "green": 101,
                "yellow": 90,
                "orange": 50,
                "red": 20
            },
            "format-charging": "󰂄 {capacity}% ({time})",
            "format-full": "󰂄 {capacity}% (Charged)",
            "format-plugged": "󰂄 {capacity}% (Charged)",
            "format": "{icon} {capacity}% ({time})",
            "format-icons": [
                "󰁺",
                "󰁼",
                "󰁾",
                "󰂁",
                "󰁹"
            ]
        },
        "battery#2": {
            "bat": "BAT1",
            "interval": 10,
            "format-time": "{H:02}:{m} left",
            /* battery triggers BELOW, unlike others */
            "states": {
                "green": 101,
                "yellow": 90,
                "orange": 50,
                "red": 20
            },
            "format-charging": "󰂄 {capacity}% ({time})",
            "format-full": "󰂄 {capacity}% (Charged)",
            "format-plugged": "󰂄 {capacity}% (Charged)",
            "format": "{icon} {capacity}% ({time})",
            "format-icons": [
                "󰁺",
                "󰁼",
                "󰁾",
                "󰂁",
                "󰁹"
            ]
        },
        "memory": {
            "interval": 30,
            "format": " {used:0.1f}G/{total:0.1f}G",
            "states": {
                "yellow": 50,
                "orange": 75,
                "red": 90
            }
        },
        "cpu": {
            "format": " {usage:2}%",
            "interval": 2,
            "states": {
                "yellow": 50,
                "orange": 75,
                "red": 90
            }
        },
        "network": {
            "format": "{ifname}",
            "format-wifi": "  {essid} ({signalStrength}%)",
            "format-ethernet": " {ipaddr}",
            "format-disconnected": "", //An empty format will hide the module.
            "tooltip-format": "{ifname} via {gwaddr} 󰊗",
            "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
            "tooltip-format-ethernet": "{ifname} ",
            "tooltip-format-disconnected": "Disconnected",
            "max-length": 50
        },
        "custom/vpn": {
            "format": "{icon}",
            "return-type": "json",
            "exec": "mullvad status --json listen | jq --unbuffered --compact-output '.text = .state | .class = .state | .alt = .state'",
            "format-icons": {
                "connected": "\uf023",
                "disconnected": ""
            }
        },
        "custom/netspeed": {
            "exec": "$XDG_CONFIG_HOME/waybar/scripts/aa_network_speed.sh",
            "return-type": "json",
            "format": "{icon}{text}",
            "format-icons": {
                "Mi": "+"
            }
        },
    },
    {
        "name": "bottom-bar-secondary",
        "output": [
            "HDMI-A-1",
            "DP-3"
        ],
        "layer": "top",
        "position": "bottom",
        "height": 40,
        "spacing": 5,
        "modules-left": [],
        "modules-center": [
            "cpu",
        ],
        "modules-right": [],
        "custom/spacer": {
            "format": " || "
        },
        "custom/updates": {
            //"format": "Fix script"
            "format": "{text}",
            "return-type": "json",
            "exec": "$XDG_CONFIG_HOME/waybar/scripts/check_updates.sh"
        },
        "cpu": {
            "format": " {usage:2}%",
            "interval": 2,
            "states": {
                "yellow": 50,
                "orange": 75,
                "red": 90
            }
        },
    }
]
